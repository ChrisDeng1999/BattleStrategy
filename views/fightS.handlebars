<div class = "row justify-content-center">
    <button type = "button" class="btn btn-primary col-2 mx-4" id= "back" >Go Home</button>
    <button type = "button" class="btn btn-primary col-2 mx-4" id= "fight" >Battle</button>
    <button type = "button" class="btn btn-primary col-2 mx-4" id= "next" >Next Fight</button>
</div>


    <div class = "text-center my-5 monCard">
        <img src = "/images_character/sammi_img.jpg" alt = "image of our wonderful TA Sammi" class = "my-2 pic">
        <p class= "font-weight-bold">Name: Sammi</p>
        <p class= "font-weight-bold">Class: Minion</p>
        <p class = "yellow">Health: <span id = "monster_health">70</span></p>
        <p class = "text-info">Attack: <span id = "monster_attack">3</span></p>
    </div>
<div class = "row space justify-content-around"> 
  {{#each characters as |character|}}
    <div class = "col-2 text-center charCard">
      <p class= "font-weight-bold">Name: {{char_name}}</p>
      <p class= "font-weight-bold">Class: {{char_class}}</p>
      <p class = "yellow">Health: <span class = "charHealth">{{char_health}}</span></p>
      <p class = "text-info">Attack: <span class = "charAttack">{{char_attack}}</span></p>
    </div>
  {{/each}}
</div>
<script src="/js/fightS.js"></script>