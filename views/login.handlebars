<div class="row loginContainer">
  <div class="col-md-6">
    <h2 style="color:#6b6666">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" style="color:#6b6666">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" style="color:#6b6666">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="color:#6b6666">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 style="color:#6b6666">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" style="color:#6b6666">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" style="color:#6b6666">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" style="color:#6b6666">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="color:#6b6666">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>

