<div class = "row justify-content-center">
    <button type = "button" class="btn btn-primary col mx-4" id= "back" >Go Home</button>
    <button type = "button" class="btn btn-primary col mx-4" id= "end" >End Game</button>
</div>


    <div class = "text-center my-5 monCard">
        <img src = "/images_character/bryan_img.jpg" alt = "image of our wonderful teacher Bryan" class = "my-2">
        <p class= "font-weight-bold">Name: <span id = "monster_name">Bryan</span></p>
        <p class= "font-weight-bold">Class: Boss</p>
        <p class = "yellow">Health: <span id = "monster_health">40</span></p>
        <p class = "text-info">Attack: <span id = "monster_attack">7</span></p>
    </div>
<div class = "row space justify-content-around"> 
  {{#each characters as |character|}}
    <div class = "col-2 text-center charCard">
      <p class= "font-weight-bold">Character: <span id = "charId">{{id}}</span></p>
      <p class= "font-weight-bold">Name: <span id = "charName">{{char_name}}</span></p>
      <p class= "font-weight-bold ">Class: {{char_class}}</p>
      <p class = "yellow">Health: <span id = "charHealth">{{char_health}}</span></p>
      <p class = "text-info">Attack: <span id = "charAttack">{{char_attack}}</span></p>
      <button type = "button" class="btn btn-primary" id= "fight" >Battle</button>
    </div>
  {{/each}}
</div>
<script src="/js/fightB.js"></script>